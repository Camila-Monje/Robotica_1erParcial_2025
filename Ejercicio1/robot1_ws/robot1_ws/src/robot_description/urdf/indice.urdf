<?xml version="1.0"?>
<robot name="indice_finger">

  <material name="orange"><color rgba="1 0.55 0 1"/></material>
  <material name="dark"><color rgba="0.15 0.15 0.15 1"/></material>
  <material name="cyan"><color rgba="0 0.8 0.8 1"/></material>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 -0.15" rpy="0 0 0"/>
      <geometry><cylinder length="0.30" radius="0.12"/></geometry>
      <material name="dark"/>
    </visual>
  </link>

  <link name="link1">
    <visual>
      <origin xyz="0 -0.75 0" rpy="1.57079632679 0 0"/> 
      <geometry><cylinder length="1.50" radius="0.05"/></geometry>
      <material name="orange"/>
    </visual>
  </link>

  <joint name="q1" type="revolute">
    <parent link="base_link"/>
    <child  link="link1"/>
    <origin xyz="0 0 0" rpy="0 0 3.14159265"/> 
    <axis xyz="1 0 0"/> 
    <limit lower="-1.57" upper="1.57" effort="10" velocity="2.0"/>
  </joint>

  <link name="link2">
    <visual>
      <origin xyz="0 -0.50 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder length="1.00" radius="0.045"/></geometry>
      <material name="orange"/>
    </visual>
  </link>

  <joint name="q2" type="revolute">
    <parent link="link1"/>
    <child  link="link2"/>
    <origin xyz="0 -1.50 0" rpy="0 0 0"/> 
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="2.0"/>
  </joint>

  <link name="link3">
    <visual>
      <origin xyz="0 -0.40 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder length="0.80" radius="0.04"/></geometry>
      <material name="orange"/>
    </visual>
  </link>

  <joint name="q3" type="revolute">
    <parent link="link2"/>
    <child  link="link3"/>
    <origin xyz="0 -1.00 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="2.0"/>
  </joint>

  <link name="ee_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><sphere radius="0.08"/></geometry>
      <material name="cyan"/>
    </visual>
  </link>

  <joint name="tool0" type="fixed">
    <parent link="link3"/>
    <child  link="ee_link"/>
    <origin xyz="0 -0.80 0" rpy="0 0 0"/>
  </joint>

</robot>