<?xml version="1.0"?>
<robot name="indice_finger" xmlns:xacro="http://ros.org/wiki/xacro">
<xacro:macro name="indice" params="prefix">

  <material name="${prefix}orange"><color rgba="1 0.55 0 1"/></material>
  <material name="${prefix}dark"><color rgba="0.15 0.15 0.15 1"/></material>
  <material name="${prefix}cyan"><color rgba="0 0.8 0.8 1"/></material>

  <link name="${prefix}base_link">
    <visual>
      <origin xyz="0 0 -0.075" rpy="0 0 0"/>
      <geometry><cylinder length="0.15" radius="0.12"/></geometry>
      <material name="${prefix}dark"/>
    </visual>
  </link>

  <link name="${prefix}link1">
    <visual>
      <origin xyz="0 -0.3 0" rpy="1.57079632679 0 0"/> 
      <geometry><cylinder length="0.60" radius="0.05"/></geometry>
      <material name="${prefix}orange"/>
    </visual>
  </link>

  <joint name="${prefix}q1" type="revolute">
    <parent link="${prefix}base_link"/>
    <child  link="${prefix}link1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/> 
    <axis xyz="1 0 0"/> 
    <limit lower="-1.57" upper="1.57" effort="10" velocity="2.0"/>
  </joint>

  <link name="${prefix}link2">
    <visual>
      <origin xyz="0 -0.25 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder length="0.50" radius="0.045"/></geometry>
      <material name="${prefix}orange"/>
    </visual>
  </link>

  <joint name="${prefix}q2" type="revolute">
    <parent link="${prefix}link1"/>
    <child  link="${prefix}link2"/>
    <origin xyz="0 -0.60 0" rpy="0 0 0"/> 
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="2.0"/>
  </joint>

  <link name="${prefix}link3">
    <visual>
      <origin xyz="0 -0.20 0" rpy="1.57079632679 0 0"/>
      <geometry><cylinder length="0.40" radius="0.04"/></geometry>
      <material name="${prefix}orange"/>
    </visual>
  </link>

  <joint name="${prefix}q3" type="revolute">
    <parent link="${prefix}link2"/>
    <child  link="${prefix}link3"/>
    <origin xyz="0 -0.50 0" rpy="0 0 0"/> 
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="2.0"/>
  </joint>

  <link name="${prefix}ee_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><sphere radius="0.08"/></geometry>
      <material name="${prefix}cyan"/>
    </visual>
  </link>

  <joint name="${prefix}tool0" type="fixed">
    <parent link="${prefix}link3"/>
    <child  link="${prefix}ee_link"/>
    <origin xyz="0 -0.40 0" rpy="0 0 0"/> 
  </joint>

</xacro:macro>
</robot>